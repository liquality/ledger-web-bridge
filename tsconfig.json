{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "commonjs", 
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./node_modules", "**/*.spec.ts", "examples", "tests"],
  "include": ["./src", "./tests", "jest.config.js"]
}
